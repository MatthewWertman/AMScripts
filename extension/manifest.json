{
  "name": "AMScripts",
  "description": "Util scripts for AM Cloud Services",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "expandGroups": {
        "suggested_key": "Ctrl+Shift+X",
        "description": "Expands all groups"
    },
    "collapseGroups": {
        "suggested_key": "Ctrl+Shift+Q",
        "description": "Collapses all groups"
    }
  }
}
