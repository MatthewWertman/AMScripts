{
  "name": "AMScripts",
  "description": "Util scripts for AM Cloud Services",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icons/AMScriptExt_16.png",
      "32": "/images/icons/AMScriptExt_32.png",
      "48": "/images/icons/AMScriptExt_48.png",
      "128": "/images/icons/AMScriptExt_128.png"
    }
  },
  "icons": {
    "16": "/images/icons/AMScriptExt_16.png",
    "32": "/images/icons/AMScriptExt_32.png",
    "48": "/images/icons/AMScriptExt_48.png",
    "128": "/images/icons/AMScriptExt_128.png"
  },
  "commands": {
    "expandGroups": {
        "suggested_key": "Ctrl+Shift+X",
        "description": "Expands all groups"
    },
    "collapseGroups": {
        "suggested_key": "Ctrl+Shift+Z",
        "description": "Collapses all groups"
    }
  }
}
